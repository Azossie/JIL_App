<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scaleType="fitXY"
    android:id="@+id/fragment_terms_table"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.digitalworkshop.packdigitalbag.Method101TermsTableFragment">


    <Button
        android:id="@+id/back_to_method101_start_process"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="5dp"
        android:backgroundTint="@color/jil_yellow"
        android:textColor="@color/black"
        android:text="zurück" />


    <ImageView
        android:id="@+id/mascot_101method_intro"
        android:layout_width="155dp"
        android:layout_height="177dp"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="100dp"
        app:srcCompat="@drawable/mascot_gladly" />

    <ImageView
        android:id="@+id/bubble_101method_intro2"
        android:layout_width="170dp"
        android:layout_height="125dp"
        android:layout_marginLeft="-20dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/write_terms_in_table" />

    <!--<TextView
        android:id="@+id/text_bubble_intro2"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="Schreibt jeden Begriff in die Tabelle."
        android:textSize="16sp"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="15dp"/>
-->

    <ImageView
        android:id="@+id/bubble_101method_intro"
        android:layout_width="190dp"
        android:layout_height="170dp"
        android:layout_marginLeft="220dp"
        app:srcCompat="@drawable/click_on_cell" />

    <Button
        android:id="@+id/button_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="270dp"
        android:text="start"
        android:backgroundTint="@color/colorPrimary"
        android:theme="@style/titleStyle"/>

   <!-- <TextView
        android:id="@+id/text_bubble_intro"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Klicke einfach auf eine Zelle, um einen Begriff einzugeben."
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="305dp"/>-->

    <TextView
        android:id="@+id/text_legende"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Legende:"
        android:textSize="16sp"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="10dp"/>

    <ImageView
        android:id="@+id/image_square_white"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="280dp"
        android:layout_marginLeft="10dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/square" />

    <TextView
        android:id="@+id/text_square_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Leere Zelle(frei)"
        android:textSize="12sp"
        android:layout_marginTop="275dp"
        android:layout_marginLeft="40dp"/>

    <ImageView
        android:id="@+id/image_square_grey"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="10dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/square_gray" />

    <TextView
        android:id="@+id/text_square_grey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zelle in Bearbeitung"
        android:textSize="12sp"
        android:layout_marginTop="295dp"
        android:layout_marginLeft="40dp"/>

    <ImageView
        android:id="@+id/image_square_yellow"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="320dp"
        android:layout_marginLeft="10dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/square_yellow" />

    <TextView
        android:id="@+id/text_square_yellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zelle bereit gefüllt"
        android:textSize="12sp"
        android:layout_marginTop="315dp"
        android:layout_marginLeft="40dp"/>

    <TextView
    android:id="@+id/text_number_terms"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Anzahl der Begriffe:"
    android:textSize="16sp"
    android:layout_marginTop="250dp"
    android:layout_marginLeft="180dp"/>

    <TextView
        android:id="@+id/number_terms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="360dp"
        android:theme="@style/titleStyle" />

    <TextView
        android:id="@+id/text_remaining_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restzeit: "
        android:textSize="16sp"
        android:layout_marginTop="280dp"
        android:layout_marginLeft="200dp"/>

    <TextView
        android:id="@+id/countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="280dp"
        android:layout_marginLeft="300dp"
        android:theme="@style/titleStyle"/>



    <TextView
        android:id="@+id/method_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="101-Methode"
        android:textSize="30sp"
        android:layout_gravity="center"
        android:textFontWeight="4"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="0dp"/>

    <Button
        android:id="@+id/button_show_all_terms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="0dp"
        android:layout_gravity="center"
        android:text="Alle Begriffe anzeigen"
        android:backgroundTint="@color/colorPrimary"
        android:theme="@style/titleStyle"/>

    <HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:layout_marginTop="490dp"
        android:scaleType="fitXY"
        tools:context=".MainActivity">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:scaleType="fitXY"
            android:padding="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY">

                <TableLayout
                    android:id="@+id/method_table"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="10dp"

                    android:background="@android:color/white">

                </TableLayout>

            </RelativeLayout>

        </ScrollView>
    </HorizontalScrollView>

</FrameLayout>