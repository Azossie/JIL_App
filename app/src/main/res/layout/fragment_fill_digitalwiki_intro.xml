<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:padding="10dp">

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scaleType="fitXY"
    tools:context=".ui.digitalworkshop.filldigitalwiki.FillDigitalwikiIntroFragment">

    <Button
           android:id="@+id/back_to_wiki_definition"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="70dp"
           android:layout_marginLeft="50dp"
           android:backgroundTint="@color/jil_yellow"
           android:textColor="@color/black"
           android:text="zurück" />

    <!--<Button
        android:id="@+id/goto_fill_digitalwiki_categories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="250dp"
        android:backgroundTint="@color/jil_yellow"
        android:textColor="@color/black"
        android:text="weiter" />-->


    <ImageView
        android:id="@+id/wiki_mascot_gladly_step1"
        android:layout_width="135dp"
        android:layout_height="145dp"
        android:layout_marginTop="160dp"
        android:src="@drawable/mascot_gladly"/>

    <TextView
        android:id="@+id/wiki_time_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="190dp"
        android:layout_marginLeft="130dp"
        android:singleLine="false"
        android:text="1. Du erhältst folgende Begriffe nach zufälligem Verteilen der Begriffe."
        />

    <TextView
        android:id="@+id/text_wiki_intro_your_terms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="130dp"
        android:singleLine="false"
        android:theme="@style/titleStyle"
        android:text="Drohne, Autonome Fahrzeuge, Intelligente Prozesse, Robotik, Additive Fertigung"
        />


    <ImageView
        android:id="@+id/wiki_mascot_gladly_step2"
        android:layout_width="135dp"
        android:layout_height="145dp"
        android:layout_marginTop="320dp"
        android:src="@drawable/mascot_gladly"/>

    <TextView
        android:id="@+id/text_ringlecture_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="130dp"
        android:singleLine="false"
        android:text="2. In der Ringvorlesung habt ihr gelernt, dass es einen Digitalisierungsradar gibt, der die Digitalisierung mit den 4 Begriffen Digitale Daten, Automatisierung, Digitaler Kundenzugang und Vernetzung beschreibt. Die Begriffe findet ihr in euerm Wiki wieder."
        />

   <!-- android:id="@+id/goto_fill_digitalwiki_categories"-->
    <Button
        android:id="@+id/goto_fill_digitalwiki_all_terms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="530dp"
        android:layout_marginLeft="130dp"
        android:backgroundTint="@color/jil_yellow"
        android:textColor="@color/black"
        android:text="Hier geht´s zum Wiki" />

    <ImageView
        android:id="@+id/wiki_mascot_gladly_step3_4"
        android:layout_width="135dp"
        android:layout_height="145dp"
        android:layout_marginTop="580dp"
        android:src="@drawable/mascot_gladly"/>

    <TextView
        android:id="@+id/wiki_work_info1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="600dp"
        android:layout_marginLeft="130dp"
        android:singleLine="false"
        android:text="3. Versucht nun eure Begriffe in diese Kategorien einzuteilen und fügt jeweils eine passende Erklärung für den Begriff hinzu."
        />

    <TextView
        android:id="@+id/wiki_work_info2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="690dp"
        android:layout_marginLeft="130dp"
        android:singleLine="false"
        android:text="4. Fügt außerdem Erklärungen für die schon vorhandenen Begriffe ein."
        />

    <ImageView
        android:id="@+id/image_wiki_tipp"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="740dp"
        android:src="@drawable/tipp" />

    <TextView
        android:id="@+id/text_wiki_tipp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="745dp"
        android:layout_marginLeft="130dp"
        android:singleLine="false"
        android:text="Die Erklärvideos zum Thema Recherchemethoden können euch eine große Hilfe sein. Dort erfahrt ihr, wie ihr am besten nach Informationen sucht."
        />

    <Button
        android:id="@+id/goto_videos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="850dp"
        android:layout_marginLeft="130dp"
        android:backgroundTint="@color/jil_yellow"
        android:textColor="@color/black"
        android:text="Hier geht´s zu den Videos" />

</FrameLayout>

</ScrollView>