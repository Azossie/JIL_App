<?xml version="1.0" encoding="utf-8"?>
 <HorizontalScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_vertical"
        android:padding="5dp"
        android:scaleType="fitXY"
        tools:context=".ui.innovationworkshop.persona.EditPersonaFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_vertical"
            android:padding="10dp"
            android:fillViewport="true"
            android:scaleType="fitXY">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                tools:context=".ui.innovationworkshop.persona.EditPersonaFragment">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    tools:context=".ui.innovationworkshop.persona.EditPersonaFragment">

                    <Button
                        android:id="@+id/back_to_create_persona"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:layout_marginEnd="265dp"
                        android:backgroundTint="@color/jil_yellow"
                        android:textColor="@color/black"
                        android:text="zurÃ¼ck"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:id="@+id/active_users"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="395dp"
                        android:text=""
                        android:textSize="14sp"
                        android:textStyle="italic"
                        android:theme="@style/titleStyle"
                        android:singleLine="false"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/back_to_create_persona" />


                    <TextView
                        android:id="@+id/text_persona_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Persona"
                        android:gravity="center_vertical"
                        android:textSize="30sp"
                        android:theme="@style/titleStyle"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/back_to_create_persona" />

                    <Button
                        android:id="@+id/button_pesona_speichern"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:text="persona speichern"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/back_to_create_persona"
                        app:layout_constraintTop_toTopOf="parent" />

                    <Button
                        android:id="@+id/button_pesona_start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:text="start"
                        app:layout_constraintEnd_toStartOf="@id/text_name_title"
                        app:layout_constraintStart_toEndOf="@id/editText_profil"
                        app:layout_constraintTop_toBottomOf="@id/text_persona_title" />


                    <TextView
                        android:id="@+id/text_countdown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:text="Restzeit: 00:00"
                        android:theme="@style/titleStyle"
                        app:layout_constraintEnd_toStartOf="@id/text_name_title"
                        app:layout_constraintStart_toEndOf="@id/editText_profil"
                        app:layout_constraintTop_toBottomOf="@id/button_pesona_start" />

                    <ImageView
                        android:id="@+id/image_persona"
                        android:layout_width="135dp"
                        android:layout_height="150dp"
                        android:layout_marginTop="200dp"
                        android:layout_marginStart="50dp"
                        android:src="@drawable/woman"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/back_to_create_persona"/>


                    <TextView
                        android:id="@+id/text_profil_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="0dp"
                        android:layout_marginEnd="140dp"
                        android:layout_marginTop="80dp"
                        android:theme="@style/titleStyle"
                        android:textSize="20sp"
                        android:text="Typisch ich:"
                        android:stretchColumns="*"
                        app:layout_constraintEnd_toStartOf="@id/button_pesona_speichern"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/back_to_create_persona" />

                    <EditText
                        android:id="@+id/editText_profil"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="130dp"
                        android:background="@drawable/border_purple"
                        android:hint="Text eingeben"
                        android:ems="11"
                        android:gravity="start|top"
                        android:inputType="textMultiLine"
                        app:layout_constraintEnd_toStartOf="@id/button_pesona_speichern"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/text_profil_title" />

                    <!--<Button
                        android:id="@+id/button_save_profil"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="speichern"
                        android:textSize="10sp"
                        android:padding="2dp"
                        tools:layout_editor_absoluteX="120dp"
                        tools:layout_editor_absoluteY="389dp" />-->


                    <TextView
                        android:id="@+id/text_name_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="260dp"
                        android:layout_marginTop="80dp"
                        android:textSize="20sp"
                        android:theme="@style/titleStyle"
                        android:text="Name:"
                        android:stretchColumns="*"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/button_pesona_speichern" />

                    <EditText
                        android:id="@+id/editText_name"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="60dp"
                        android:background="@drawable/border_green"
                        android:hint="Name eingeben"
                        android:ems="11"
                        android:gravity="start|top"
                        android:inputType="textMultiLine"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/image_persona"
                        app:layout_constraintTop_toBottomOf="@id/text_name_title" />

                    <TextView
                        android:id="@+id/text_age_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="258dp"
                        android:layout_marginTop="25dp"
                        android:theme="@style/titleStyle"
                        android:textSize="20sp"
                        android:text="Alter:"
                        android:stretchColumns="*"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/editText_name" />

                    <EditText
                        android:id="@+id/editText_age"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="60dp"
                        android:background="@drawable/border_yellow"
                        android:hint="Alter eingeben"
                        android:ems="11"
                        android:gravity="start|top"
                        android:inputType="textMultiLine"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/image_persona"
                        app:layout_constraintTop_toBottomOf="@id/text_age_title" />


                    <TextView
                        android:id="@+id/text_job_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="260dp"
                        android:layout_marginTop="25dp"
                        android:textSize="20sp"
                        android:theme="@style/titleStyle"
                        android:text="Beruf:"
                        android:stretchColumns="*"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/editText_age" />

                    <EditText
                        android:id="@+id/editText_job"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="60dp"
                        android:background="@drawable/border_red"
                        android:hint="Beruf eingeben"
                        android:ems="11"
                        android:gravity="start|top"
                        android:inputType="textMultiLine"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/image_persona"
                        app:layout_constraintTop_toBottomOf="@id/text_job_title" />

                    <TextView
                        android:id="@+id/text_hobbies_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginEnd="30dp"
                        android:theme="@style/titleStyle"
                        android:textSize="20sp"
                        android:text="Meine Hobbys sind:"
                        android:stretchColumns="*"
                        app:layout_constraintEnd_toStartOf="@id/image_persona"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/editText_profil" />

                    <EditText
                        android:id="@+id/editText_hobbies"
                        android:layout_width="200dp"
                        android:layout_height="150dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="40dp"
                        android:hint="Hobbys nennen"
                        android:background="@drawable/border_blue"
                        android:ems="11"
                        android:gravity="start|top"
                        android:inputType="textMultiLine"
                        app:layout_constraintEnd_toStartOf="@id/image_persona"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/text_hobbies_title" />


                    <TextView
                        android:id="@+id/text_todo_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="245dp"
                        android:layout_marginTop="70dp"
                        android:theme="@style/titleStyle"
                        android:textSize="20sp"
                        android:text="Meine Aufgaben sind:\n(zu Hause und Beruf)"
                        android:stretchColumns="*"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/editText_job" />

                    <EditText
                        android:id="@+id/editText_todo"
                        android:layout_width="250dp"
                        android:layout_height="200dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="260dp"
                        android:hint="Text eingeben"
                        android:background="@drawable/border_blood"
                        android:ems="11"
                        android:gravity="start|top"
                        android:inputType="textMultiLine"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/text_todo_title" />


                    <TextView
                        android:id="@+id/text_expectations_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="80dp"
                        android:theme="@style/titleStyle"
                        android:textSize="20sp"
                        android:text="Von Inde Land Zukunft\nerwarte ich:"
                        android:stretchColumns="*"
                        app:layout_constraintEnd_toStartOf="@id/editText_todo"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/editText_hobbies" />

                    <EditText
                        android:id="@+id/editText_expectations"
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="0dp"
                        android:layout_marginEnd="70dp"
                        android:hint="Text eingeben"
                        android:background="@drawable/border_brown"
                        android:ems="11"
                        android:gravity="start|top"
                        android:inputType="textMultiLine"
                        app:layout_constraintEnd_toStartOf="@id/editText_todo"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/text_expectations_title" />


                    <TextView
                        android:id="@+id/text_characteristics_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="70dp"
                        android:layout_marginTop="20dp"
                        android:theme="@style/titleStyle"
                        android:textSize="20sp"
                        android:text="Top 10 Character-Eigenschaften:"
                        android:stretchColumns="*"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/editText_expectations"
                        app:layout_constraintTop_toBottomOf="@id/editText_todo" />

                    <EditText
                        android:id="@+id/editText_characteristics"
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="20dp"
                        android:hint="Text eingeben"
                        android:background="@drawable/border_orange"
                        android:ems="11"
                        android:gravity="start|top"
                        android:inputType="textMultiLine"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/editText_expectations"
                        app:layout_constraintTop_toBottomOf="@id/text_characteristics_title" />

                    <TableLayout
                        android:id="@+id/table_icons"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="100dp"
                        android:stretchColumns="*"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.409"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/editText_characteristics">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/border"
                            android:padding="10dp">

                            <ImageView
                                android:id="@+id/image_woman"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/woman" />

                            <ImageView
                                android:id="@+id/image_man"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/man" />

                        </TableRow>

                    </TableLayout>



                </androidx.constraintlayout.widget.ConstraintLayout>

            </FrameLayout>

    </ScrollView>
</HorizontalScrollView>